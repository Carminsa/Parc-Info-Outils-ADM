<div class="col-md-12 margin-top">

    <% if (error) { %>
    <div class="alert alert-danger">
        <p class="error">Une erreur est survenue merci de ressayer</p>
    </div>


    <% } %>


    <form action="/insert" method="post">

        <div class="form-group">
            <label for="login" class="label_auth ">Login</label>
            <input type="text" name="login" class="form-control" id="login" required>
        </div>

        <div class="form-group">
            <label for="password" class="label_auth">Mot de Passe</label>
            <input type="password" name="password" class="form-control" id="password" required>
        </div>

        <div class="form-group">
            <label for="firstname" class="label_auth">Prénom</label>
            <input type="text" name="firstname" class="form-control" id="firstname" required>
        </div>

        <div class="form-group">
            <label for="lastname" class="label_auth">Nom de Famille</label>
            <input type="text" name="lastname" class="form-control" id="lastname" required>
        </div>


        <div class="form-group">
            <label for="phone" class="label_auth">Numéro de Téléphone</label>
            <input type="tel" name="phone" class="form-control" id="phone" required>
        </div>


        <div class="form-group">
            <label for="mail" class="label_auth">Adresse Email</label>
            <input type="text" name="mail" class="form-control" id="mail" required>
        </div>

        <br>
        <br>

        <div class="col-md-4 col-md-offset-5">
            <input type="submit" class="btn btn-lg btn-primary" value="S'inscrire">
        </div>
    </form>
</div>